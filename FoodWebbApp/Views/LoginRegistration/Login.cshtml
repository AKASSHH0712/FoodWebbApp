@model Food.DTOs.UserDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .form-container {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

            .form-container h4 {
                margin-bottom: 30px;
                font-size: 26px;
                font-weight: 600;
                color: #333;
                text-align: center;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                color: #495057;
                font-weight: 500;
            }

            .form-group input {
                border-radius: 8px;
                padding: 12px;
                border: 1px solid #ced4da;
                font-size: 16px;
            }

                .form-group input[type="submit"] {
                    background-color: #007bff;
                    border: none;
                    color: #ffffff;
                    padding: 14px 18px;
                    border-radius: 8px;
                    cursor: pointer;
                    transition: background-color 0.3s ease, transform 0.3s ease;
                    font-size: 16px;
                }

                    .form-group input[type="submit"]:hover {
                        background-color: #0056b3;
                        transform: scale(1.02);
                    }

        .form-container .btn-register {
            display: block;
            margin-top: 15px;
            text-align: center;
            font-size: 16px;
            color: #007bff;
            text-decoration: none;
        }

            .form-container .btn-register:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="form-container">
        <h4>Login</h4>
        <hr />

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="USERNAME" class="control-label">Username</label>
                <input asp-for="USERNAME" class="form-control" placeholder="Enter username" />
                <span asp-validation-for="USERNAME" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PASSWORD" class="control-label">Password</label>
                <input asp-for="PASSWORD" type="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="PASSWORD" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>

        <a asp-action="Register" class="btn-register">New User? Register Here</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
