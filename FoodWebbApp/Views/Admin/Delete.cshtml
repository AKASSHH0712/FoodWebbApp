@model Food.DTOs.ProductDTO

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
        .delete-header {
            background-color: #dc3545;
            color: white;
            padding: 20px;
            text-align: center;
        }
        .delete-container {
            margin-top: 50px;
        }
        .delete-content {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        dt {
            font-weight: bold;
        }
        dd {
            margin-bottom: 10px;
        }
        .btn-group {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="delete-header">
        <h2>Delete Product</h2>
    </div>
    <div class="container delete-container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="delete-content">
                    <h4>Are you sure you want to delete this product?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.PRODUCTID)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.PRODUCTID)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.PRICE)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.PRICE)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.NAME)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.NAME)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.DESCRIPTION)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DESCRIPTION)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.IMAGEURL)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.IMAGEURL)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.CATEGORYID)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.CATEGORYID)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.QUANTITY)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.QUANTITY)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.ISACTIVE)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.ISACTIVE)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.CATEGORYNAME)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.CATEGORYNAME)
                        </dd>
                    </dl>

                    <h5 class="text-danger">Are you sure you want to delete the product with ID @Model.PRODUCTID?</h5>

                    @using (Html.BeginForm("Delete", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.PRODUCTID)
                        <div class="btn-group">
                            <input type="submit" value="Delete" class="btn btn-danger me-2" />
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
