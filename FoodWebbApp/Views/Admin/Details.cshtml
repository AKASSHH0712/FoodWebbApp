@model Food.DTOs.ProductDTO

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
        .details-header {
            background-color: #343a40;
            color: white;
            padding: 20px;
            text-align: center;
        }
        .details-container {
            margin-top: 50px;
        }
        .details-content {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        dt {
            font-weight: bold;
        }
        dd {
            margin-bottom: 10px;
        }
        .btn-back {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="details-header">
        <h2>Product Details</h2>
    </div>
    <div class="container details-container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="details-content">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.PRODUCTID)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.PRODUCTID)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.PRICE)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.PRICE)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.NAME)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.NAME)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.DESCRIPTION)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DESCRIPTION)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.IMAGEURL)
                        </dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.IMAGEURL))
                            {
                                <img src="@Model.IMAGEURL" alt="Product Image" style="max-width: 100%; height: auto;" />
                            }
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.CATEGORYID)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.CATEGORYID)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.QUANTITY)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.QUANTITY)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.ISACTIVE)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.ISACTIVE)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.CATEGORYNAME)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.CATEGORYNAME)
                        </dd>
                    </dl>
                </div>
                <div class="btn-back text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.PRODUCTID }, new { @class = "btn btn-primary me-2" })
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
