@model IEnumerable<Food.DTOs.ProductDTO>

@{
    Layout = null;
    ViewData["Title"] = "Admin Panel";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .admin-header {
            background-color: #343a40;
            color: white;
            padding: 20px;
            text-align: center;
        }

        .admin-container {
            margin-top: 50px;
        }

        .admin-table th {
            background-color: #007bff;
            color: white;
        }

        .admin-table img {
            width: 100px;
            height: auto;
        }

        .action-links a {
            margin-right: 10px;
        }

        .btn-create {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="admin-header">
        <h1>Admin Panel</h1>
    </div>
    <div class="container admin-container">
        <div class="row">
            <div class="col-md-12">
                <a asp-action="AddProduct" asp-controller="Admin" class="btn btn-success btn-create">Create New Product</a>
                <table class="table table-bordered admin-table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.PRODUCTID)</th>
                            <th>@Html.DisplayNameFor(model => model.PRICE)</th>
                            <th>@Html.DisplayNameFor(model => model.NAME)</th>
                            <th>@Html.DisplayNameFor(model => model.DESCRIPTION)</th>
                            <th>@Html.DisplayNameFor(model => model.IMAGEURL)</th>
                            <th>@Html.DisplayNameFor(model => model.CATEGORYID)</th>
                            <th>@Html.DisplayNameFor(model => model.QUANTITY)</th>
                            <th>@Html.DisplayNameFor(model => model.ISACTIVE)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.PRODUCTID)</td>
                                <td>@Html.DisplayFor(modelItem => item.PRICE)</td>
                                <td>@Html.DisplayFor(modelItem => item.NAME)</td>
                                <td>@Html.DisplayFor(modelItem => item.DESCRIPTION)</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.IMAGEURL))
                                    {
                                        <img src="@Url.Content(item.IMAGEURL)" alt="Product Image" />
                                    }
                                    else
                                    {
                                        <img src="@Url.Content("~/Image/default.jpg")" alt="Default Image" />
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.CATEGORYID)</td>
                                <td>@Html.DisplayFor(modelItem => item.QUANTITY)</td>
                                <td>@Html.DisplayFor(modelItem => item.ISACTIVE)</td>
                                <td class="action-links text-center">
                                    <div class="btn-group" role="group">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.PRODUCTID }, new { @class = "btn btn-primary btn-sm" })
                                        @Html.ActionLink("Details", "Details", new { id = item.PRODUCTID }, new { @class = "btn btn-info btn-sm" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.PRODUCTID }, new { @class = "btn btn-danger btn-sm" })
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
