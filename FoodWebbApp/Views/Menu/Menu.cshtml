@model Food.DTOs.ProductDTO
 @inject IHttpContextAccessor Accessor


<style>
    .head {
        margin-top: 70px;
    }

    .fashion_section {
        margin-top: 70px;
    }

    .fashion_taital {
        text-align: center;
        font-size: 36px;
        color: #333;
        margin-bottom: 30px;
        text-transform: uppercase;
        font-weight: bold;
    }

    .box_main {
        text-align: center;
        padding: 20px;
        border: 1px solid #ddd;
        background-color: #f9f9f9;
        margin-bottom: 20px;
        transition: transform 0.3s;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .box_main:hover {
            transform: translateY(-10px);
        }

    .shirt_text {
        font-size: 18px;
        color: #333;
        margin-bottom: 10px;
    }

    .price_text {
        font-size: 16px;
        color: #666;
        margin-bottom: 15px;
    }

    .tshirt_img img {
        max-width: 100%;
        height: auto;
    }

    .btn_main {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .buy_bt a, .seemore_bt a {
        background-color: #5cb85c;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .buy_bt a:hover, .seemore_bt a:hover {
            background-color: #4cae4c;
        }

    .carousel-control-prev, .carousel-control-next {
        width: 5%;
    }

        .carousel-control-prev i, .carousel-control-next i {
            font-size: 30px;
            color: #333;
        }

</style>

<div class="fashion_section">
    <!-- Fashion Carousel -->
    <div id="main_slider" class="carousel slide mt-5" data-ride="carousel">
        <div class="carousel-inner">
            @if (Model.FastFood != null && Model.FastFood.Any())
            {
                var itemsPerSlide = 3;
                var totalSlides = (int)Math.Ceiling((double)Model.FastFood.Count() / itemsPerSlide);

                for (int slideIndex = 0; slideIndex < totalSlides; slideIndex++)
                {
                    var productsForSlide = Model.FastFood.Skip(slideIndex * itemsPerSlide).Take(itemsPerSlide);
                    <div class="carousel-item @(slideIndex == 0 ? "active" : "")">
                        <div class="container">
                            <h1 class="fashion_taital">FastFood</h1>
                            <div class="fashion_section_2">
                                <div class="row">
                                    @foreach (var product in productsForSlide)
                                    {
                                        <div class="col-lg-4 col-sm-4 mb-4">
                                            <div class="box_main">
                                                <h4 class="shirt_text">@product.NAME</h4>
                                                <p class="price_text">Start Price <span style="color: #262626;">$ @product.PRICE</span></p>
                                                <div class="tshirt_img">
                                                    <img src="@Url.Content(product.IMAGEURL)" alt="@product.NAME">
                                                </div>
                                                <form action="@Url.Action("AddToCart", "Addtocart")" method="post">
                                                    <input type="hidden" name="PRODUCTID" value="@product.PRODUCTID" />
                                                    <input type="hidden" name="CATEGORYID" value="@product.CATEGORYID" />
                                                    <input type="hidden" name="PRICE" value="@product.PRICE"></input>
                                                    <input type="hidden" name="USERID" value="@Accessor.HttpContext.Session.GetInt32("UserID")" />
                                                    <div class="quantity-controls">
                                                        <input type="number" name="Quantity" value="1" min="1" class="quantity-input" />
                                                    </div>
                                                    <button type="submit" class="buy_bt">Add to Cart</button>
                                                </form>
                                            </div>
                                        </div>
                                    }
                                    @if (productsForSlide.Count() < itemsPerSlide)
                                    {
                                        var emptyColumns = itemsPerSlide - productsForSlide.Count();
                                        for (int i = 0; i < emptyColumns; i++)
                                        {
                                            <div class="col-lg-4 col-sm-4 mb-4"></div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="carousel-item active">
                    <div class="container">
                        <h1 class="fashion_taital">FastFood</h1>
                        <div class="fashion_section_2">
                            <div class="row">
                                <div class="col-12">
                                    <p>No products available.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
            <i class="fa fa-angle-left"></i>
        </a>
        <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
            <i class="fa fa-angle-right"></i>
        </a>
    </div>
</div>
